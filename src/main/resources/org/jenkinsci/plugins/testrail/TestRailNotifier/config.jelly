<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <!--
    This jelly script is used for per-project configuration.
    For global settings, see global.jelly.
  -->

  <f:entry title="Project" field="testrailProject">
    <f:select />
  </f:entry>
  <f:entry title="Suite" field="testrailSuite">
    <f:select />
  </f:entry>
  <f:entry title="Test Run" field="testrailRun">
    <f:textbox />
  </f:entry>
  <f:entry title="Test Report XMLs" field="junitResultsGlob">
    <f:textbox />
  </f:entry>

  <f:section title="Advanced Options">
    <f:advanced>
          <f:entry title="Delimiting character" field="syncByNameDelimiter">
            <f:textbox value="__"/>
          </f:entry>
          <f:entry title="Create new testcases" field="createNewTestcases">
              <f:checkbox/>
          </f:entry>
    </f:advanced>
  </f:section>

